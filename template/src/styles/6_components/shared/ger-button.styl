.c-ger-button
  align-items: center
  background-color: $color-primary
  border-color: $color-primary
  border-radius: $border-radius
  border-style: solid
  border-width: $border-width
  color: #fff
  display: flex
  font-size: 1rem
  font-weight: 600
  height: 50px
  justify-content: center
  padding-left: 1.5rem
  padding-right: 1.5rem
  text-align: center
  transition: .5s ease background-color, color

  &:hover
    background-color: transparent
    color: $color-primary



.c-ger-button--transparent
  background-color: transparent
  color: $color-primary

  &:hover
    background-color: $color-primary
    color: #fff



.c-ger-button--width
  margin-left: auto
  margin-right: auto
  width: 200px



.c-ger-button--default
  background-color: transparent
  border-color: inherit
  color: $border-color

  &:hover
    background-color: transparent
    color: $border-color
