.c-ger-user-config
  position: relative
  &:hover
    .c-ger-user-config__config
      display: block



.c-ger-user-config__front
  align-items: center
  display: flex
  justify-content: center
  min-height: 60px
  width: 140px

  figure
    border-radius: 50%
    border: 4px solid $color-background
    height: 40px
    margin-right: 0.5rem
    overflow: hidden
    position: relative
    width: 40px
  img
    height: 100%
    left: 50%
    position: absolute
    transform: translateX(-50%)
    width: auto



.c-ger-user-config__config
  background: white
  box-shadow: 2px 2px 20px rgba(147, 147, 147, 0.81)
  display: none
  font-size: 0.8rem
  left: 50%
  padding-bottom: 0.5rem
  position: absolute
  top: 100%
  transform translateX(-50%)
  z-index: 999

  & > *:nth-child(2)
    margin-top: 0.5rem

  &::before
    border-bottom: 0.8rem solid #fff
    border-left: 0.5rem solid transparent
    border-right: 0.5rem solid transparent
    bottom: 100%
    content: ""
    display: block
    height: 0
    position: absolute
    right: 21%
    width: 0

  & > *:not(p)
    align-items: center
    cursor: pointer
    display: flex
    justify-content: center
    line-height: 1.8rem
    list-style: none
    margin-left: 0.5rem
    margin-right: 0.5rem
    padding-left: 1rem
    padding-right: 1rem
    width: 10.5rem
    &:hover
      background: $color-primary
      color: white
      *
        color: white

    a
      align-items: center
      display: block
      display: flex
      justify-content: center
      width: 100%

    i
      color: $color-primary
      height: 0.8rem
      margin-right: 0.3rem
      width 0.8rem
      &::before
        vertical-align: middle

  p
    border-bottom: 1px solid rgba(#999, 0.4)
    color: #999
    margin: 0
    padding-bottom: 0.6rem
    padding-top: 0.8rem
    text-align: center
